<Window x:Name="Main" x:Class="Card_Creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Creator"
        mc:Ignorable="d"
        Title="Menu" Height="356" Width="458" ResizeMode="CanMinimize">


    <Grid Margin="0,0,4,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="103*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="203*"/>
        </Grid.RowDefinitions>
        <DockPanel Margin="0,0,-4,80" Grid.ColumnSpan="2" RenderTransformOrigin="0.487,2.152">
            <Menu Width="Auto" Height="22"  DockPanel.Dock="Top">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem Header="Card">
                    <MenuItem Header="New card" Click="Create_Card_Button_Click" />
                    <MenuItem Header="Edit card" Click="Load_Card_Button_Click"/>
                </MenuItem>
                <MenuItem Header="External">
                    <MenuItem Header="Import from JSON" />
                    <MenuItem Header="Export from JSON" />
                </MenuItem>
                <MenuItem Header="Settings" HorizontalAlignment="Right" Width="73">
                    <MenuItem Header="Dark Mode" Name="darkMode" IsCheckable="True" Checked="darkMode_Checked" Unchecked="darkMode_Unchecked"/>
                </MenuItem>
            </Menu>
            
        </DockPanel>
    </Grid>
</Window>
