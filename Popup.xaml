<Window x:Class="Card_Creator.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Creator"
        mc:Ignorable="d"
        Title="Popup" MinHeight="100" MinWidth="100" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <Button Name="Popup_Close_Button" Content="Close" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5" Width="75" Click="Popup_Close_Button_Click"/>
        <Label Name="Popup_Label"  Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
    </Grid>
</Window>
