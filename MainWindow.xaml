<Window x:Name="Main" x:Class="Card_Creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Creator"
        xmlns:uc="clr-namespace:Card_Creator.UC"
        mc:Ignorable="d"
        Title="Menu" Height="631" Width="748">


    <Grid Margin="0,0,4,-4">
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="287"/>
        </Grid.RowDefinitions>
        <DockPanel Margin="0,0,-4,34" RenderTransformOrigin="0.487,2.152">
            <Menu Width="Auto" Height="22"  DockPanel.Dock="Top">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem Header="Card">
                    <MenuItem Header="New card" Click="Create_Card_Button_Click" />
                    <MenuItem Header="Edit card" Click="Load_Card_Button_Click"/>
                </MenuItem>
                <MenuItem Header="External">
                    <MenuItem Header="Import from JSON"/>
                    <MenuItem Header="Export from JSON" />
                </MenuItem>
                <MenuItem Header="Settings" HorizontalAlignment="Right" Width="73">
                    <MenuItem Header="Dark Mode" Name="darkMode" IsCheckable="True" Checked="darkMode_Checked" Unchecked="darkMode_Unchecked"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <ListView x:Name="card_list_view" SelectionChanged="Card_list_view_SelectionChanged" MouseDoubleClick="Card_list_view_MouseDoubleClick" Margin="10,10,10,-200" Grid.Row="1" Background="Gray" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel></WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:Card_UC Card="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
