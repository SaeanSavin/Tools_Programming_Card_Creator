<Window x:Name="Main" x:Class="Card_Creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Creator"
        mc:Ignorable="d"
        Title="Menu" Height="356" Width="458" ResizeMode="CanMinimize">
    <Grid>
        <ComboBox x:Name="main_window_cards_box" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="ComboBox_01_SelectionChanged" Height="22" SelectedIndex="0"></ComboBox>
        <Button x:Name="Create_Card_Button" Content="Create" HorizontalAlignment="Left" Margin="190,25,0,0" VerticalAlignment="Top" Width="80" Height="22" Click="Create_Card_Button_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="Load_Card_Button" Content="Load" HorizontalAlignment="Left" Margin="285,25,0,0" VerticalAlignment="Top" Width="80" Height="22" Click="Load_Card_Button_Click"/>
        <Label x:Name="label" Content="Card:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" Height="26" Margin="5,0,0,0"/>
    </Grid>
</Window>
