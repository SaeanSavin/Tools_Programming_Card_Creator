<Window x:Class="Card_Creator.ConfirmDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Creator"
        mc:Ignorable="d"
        Title="ConfirmDelete" Height="150" Width="250">
    <Grid>
        <TextBlock Name="ConfirmDelete_TextBox" HorizontalAlignment="Center" Text="Are you sure you want to delete this type? This will also delete all attacks of this type!" FontSize="10" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,10,0,0" Height="44"/>
        <Button Name="ConfirmDelete_Delete_Button" Content="Delete" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmDelete_Delete_Button_Click"/>
        <Button Name="ConfirmDelete_Cancel_Button" Content="Cancel" HorizontalAlignment="Left" Margin="158,89,0,0" VerticalAlignment="Top" Width="74" Click="ConfirmDelete_Cancel_Button_Click"/>

    </Grid>
</Window>
